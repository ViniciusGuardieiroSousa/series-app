<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="?marginSmall"
    android:background="@android:color/transparent">
    <TextView
        android:id="@+id/episode_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/episode_air_date"
        android:textSize="?fontMedium"
        tools:text="Test"/>
    <TextView
        android:id="@+id/episode_summary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/episode_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="?marginSmall"
        android:layout_marginStart="?marginSmall"
        android:textSize="?fontSmall"
        tools:text="Test"/>

    <TextView
        android:id="@+id/episode_air_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="?marginSmall"
        android:textSize="?fontSmall"
        tools:text="Test"/>
</androidx.constraintlayout.widget.ConstraintLayout>